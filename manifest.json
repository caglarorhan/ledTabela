{
  "name": "LED Tabela - GitHub Contribution Art",
  "short_name": "LED Tabela",
  "description": "Transform your GitHub contribution chart into an LED display with text animations, 30+ color schemes, and a disco ball mode!",
  "version": "1.1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Led Tabela",
    "default_icon": {
      "16": "led-tabela_16.png",
      "24": "led-tabela_24.png",
      "32": "led-tabela_32.png"
    }
  },
  "icons": {
    "16": "led-tabela_16.png",
    "32": "led-tabela_32.png",
    "64": "led-tabela_64.png",
    "128": "led-tabela_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.github.com/*"
      ],
      "all_frames": false,
      "js": [
        "led-tabela.js",
        "alphabet.js",
        "colorCharts.js",
        "audioVisualizer.js"
      ],
      "match_about_blank": true
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "tabCapture",
    "cookies"
  ],
  "host_permissions": [
    "https://*.github.com/*",
    "https://api.github.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "led-tabela.js",
        "alphabet.js",
        "colorCharts.js",
        "audioVisualizer.js",
        "itrs.js"
      ],
      "matches": [
        "https://*.github.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
